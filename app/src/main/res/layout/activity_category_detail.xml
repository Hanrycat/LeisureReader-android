<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rvp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/indicatorSub"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_style="TRIANGLE"
        tl:tl_textsize="30sp"
        rvp:tl_textUnselectColor="@color/light_gray"
        rvp:tl_textSelectColor="@color/light_coffee"
        rvp:tl_tab_space_equal="true"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerSub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>